  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "sourceMap": false,
    "outDir": "./dist",
    "noImplicitAny": true,
    "declaration": false,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
